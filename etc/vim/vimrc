" NERDTree                                                                     "
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

let NERDTreeChDirMode=2                                         " CWD whenever nerd tree root changes
let NERDTreeIgnore=['\.svn$', '\.git$', '\.DS_Store$', '\~$\']  " Stuff to ignore
let NERDTreeWinPos="right"                                      " Put it on the right

