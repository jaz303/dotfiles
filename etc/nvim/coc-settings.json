{
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true
  },
  "diagonstic.floatConfig": {
    "border": true,
    "rounded": true
  },
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "zig": {
      "command": "zls",
      "rootPatterns": ["build.zig", "build.zig.zon"],
      "filetypes": ["zig"]
    },
    "typescript": {
      "command": ["typescript-language-server", "--stdio"],
      "rootPatterns": ["jsconfig.json", "package.json", "tsconfig.json"],
      "initOptions": {
        "hostInfo": "neovim"
      },
      "filetypes": [
        "typescript",
        "typescript.tsx",
        "typescriptreact"
      ]
    }
  }
}